<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="16dp"
    android:background="@color/colorGainsBoro">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="10dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_pending_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_pending_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="Pending Since"
                android:textSize="14sp"
                android:textColor="@color/colorLightestGray"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tv_pending_service_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/gray_rounded_corner"
                android:text="5 DAYS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_pending_since"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Nipun Sharma"
                android:textColor="@color/colorLightBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Barcode:"
                    android:textSize="16sp"
                    android:textColor="@color/colorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5386297"
                    android:textSize="16sp"
                    android:textColor="@color/colorDeepPink"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <View
                android:id="@+id/line_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGray"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_account_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_account_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Account Number"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGray" />

                    <TextView
                        android:id="@+id/tv_account_generation_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Account Generation Date"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_account_title">

                    <TextView
                        android:id="@+id/tv_account_number_display"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="123456789"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightBlack" />

                    <TextView
                        android:id="@+id/tv_account_generation_date_display"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="14/08/17"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightBlack" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>