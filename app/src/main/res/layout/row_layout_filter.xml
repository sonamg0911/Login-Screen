<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Centrum LLC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorLightBlack"/>

    <LinearLayout
        android:id="@+id/ll_second_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/tv_customer_name">

        <TextView
            android:id="@+id/tv_tentative_closure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tentative Closure"
            android:textSize="16sp"
            android:textColor="@color/colorLightGray" />

        <TextView
            android:id="@+id/tv_product_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Product Type"
            android:textSize="16sp"
            android:textColor="@color/colorLightGray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_third_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/ll_second_row">

        <TextView
            android:id="@+id/tv_closure_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="14/08/17"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorLightBlack" />

        <TextView
            android:id="@+id/tv_product_type_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Loan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorLightBlack" />

    </LinearLayout>

    <View
        android:id="@+id/line_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorLightGray"
        android:layout_below="@id/ll_third_row"/>

</RelativeLayout>